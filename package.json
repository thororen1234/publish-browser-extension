{
  "name": "@equicord/publish-browser-extension",
  "description": "Easily publish web extensions to their stores",
  "version": "4.0.6",
  "packageManager": "bun@1.3.4",
  "type": "module",
  "scripts": {
    "check": "check",
    "build": "bun run build:lib && bun run build:test-extension",
    "build:lib": "tsdown src/index.ts src/cli.ts",
    "build:test-extension": "bun scripts/build-test-extension.js",
    "dev:all": "bun ./scripts/dev.mjs all",
    "dev:chrome": "bun ./scripts/dev.mjs chrome",
    "dev:firefox": "bun ./scripts/dev.mjs firefox",
    "dev:edge": "bun ./scripts/dev.mjs edge",
    "dev:help": "bun ./scripts/dev.mjs help",
    "publish-extension": "bun src/cli.ts",
    "prepack": "bun run build",
    "prepare": "bun run simple-git-hooks"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "dotenv": "^17.2.4",
    "form-data-encoder": "^4.1.0",
    "formdata-node": "^6.0.3",
    "jsonwebtoken": "^9.0.3",
    "listr2": "^10.1.0",
    "ofetch": "^1.5.1",
    "zod": "3.25.76 || ^4.3.6"
  },
  "devDependencies": {
    "@aklinker1/check": "^2.2.0",
    "@types/bun": "^1.3.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "@typescript/native-preview": "^7.0.0-dev.20260208.1",
    "archiver": "^7.0.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "publint": "^0.3.17",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "license": "MIT",
  "keywords": [
    "chrome-web-store",
    "firefox-addon-store",
    "chrome",
    "firefox",
    "addon",
    "store",
    "extension",
    "browser"
  ],
  "author": {
    "name": "Aaron Klinker",
    "url": "https://github.com/aklinker1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aklinker1/publish-browser-extension.git"
  },
  "homepage": "https://github.com/aklinker1/publish-browser-extension#readme",
  "files": [
    "dist"
  ],
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "bin": {
    "publish-extension": "bin/publish-extension.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./cli": {
      "default": "./dist/cli.mjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
