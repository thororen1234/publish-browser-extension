{
  "name": "publish-browser-extension",
  "description": "Easily publish web extensions to their stores",
  "version": "4.0.2",
  "packageManager": "bun@1.3.4",
  "type": "module",
  "scripts": {
    "check": "check",
    "build": "run-s build:*",
    "build:lib": "tsdown src/index.ts src/cli.ts",
    "build:test-extension": "bun scripts/build-test-extension.js",
    "dev:all": "./scripts/dev.sh all",
    "dev:chrome": "./scripts/dev.sh chrome",
    "dev:firefox": "./scripts/dev.sh firefox",
    "dev:edge": "./scripts/dev.sh edge",
    "dev:help": "./scripts/dev.sh help",
    "publish-extension": "bun src/cli.ts",
    "prepack": "bun run build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "dotenv": "^17.2.3",
    "form-data-encoder": "^4.1.0",
    "formdata-node": "^6.0.3",
    "listr2": "^8.3.3",
    "ofetch": "^1.4.1",
    "zod": "^3.25.76 || ^4.0.0"
  },
  "devDependencies": {
    "@aklinker1/check": "^2.2.0",
    "@types/bun": "^1.3.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.19.123",
    "@typescript/native-preview": "^7.0.0-dev.20260206.1",
    "archiver": "^5.3.2",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "publint": "^0.3.17",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.9"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "license": "MIT",
  "keywords": [
    "chrome-web-store",
    "firefox-addon-store",
    "chrome",
    "firefox",
    "addon",
    "store",
    "extension",
    "browser"
  ],
  "author": {
    "name": "Aaron Klinker",
    "url": "https://github.com/aklinker1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aklinker1/publish-browser-extension.git"
  },
  "homepage": "https://github.com/aklinker1/publish-browser-extension#readme",
  "files": [
    "dist"
  ],
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "publish-extension": "bin/publish-extension.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
